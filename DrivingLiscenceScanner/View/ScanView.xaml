<UserControl x:Class="DrivingLicenceScanner.View.ScanView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="900">
    <UserControl.Template>
        <ControlTemplate>
            <Grid>
                <Grid.Resources>
                    <DataTemplate x:Key="CustomerTemplate">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding FirstName}"
                                           FontSize="21.333"
                                           Margin="5" />
                                <TextBlock Text="{Binding LastName}"
                                           FontSize="21.333"
                                           Margin="5" />
                            </StackPanel>
                            <TextBlock Text="{Binding City}"
                                       Margin="5,0,5,5" />
                            <TextBlock Text="{Binding DoB}"
                                       Margin="5,0,5,5" />
                            <TextBlock Text="{Binding EyeColor}"
                                       Margin="5,0,5,5" />
                            <TextBlock Text="{Binding HairColor}"
                                       Margin="5,0,5,5" />
                            <TextBlock Text="{Binding Height}"
                                       Margin="5,0,5,5" />
                            <TextBlock Text="{Binding MiddleName}"
                                       Margin="5,0,5,5" />
                            <TextBlock Text="{Binding Sex}"
                                       Margin="5,0,5,5" />
                            <TextBlock Text="{Binding State}"
                                       Margin="5,0,5,5" />
                            <TextBlock Text="{Binding Street}"
                                       Margin="5,0,5,5" />
                            <TextBlock Text="{Binding Weight}"
                                       Margin="5,0,5,5" />
                            <TextBlock Text="{Binding ZipCode}"
                                       Margin="5,0,5,5" />
                        </StackPanel>
                    </DataTemplate>
                    <Style TargetType="{x:Type Run}"
                           x:Key="TextBlockBoldStyle">

                        <Setter Property="FontWeight"
                                Value="Bold" />
                    </Style>
                </Grid.Resources>
                <Grid.DataContext>
                    <Binding Path="ScanViewModel"
                             Source="{StaticResource ViewModelLocator}" />
                </Grid.DataContext>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBox Name="TxtBoxScan"
                         Text="{Binding ScanText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <Button Grid.Row="0"
                        Grid.Column="0"
                        Content="Scan"
                        Command="{Binding ScanCommand}"
                        IsDefault="True" />
                <StackPanel Name="StkPnlMenu"
                            Grid.Row="1"
                            Grid.Column="1">
                    <Button Content="Customers"></Button>
                </StackPanel>
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Ready to scan..."></TextBlock>
            </Grid>
        </ControlTemplate>
    </UserControl.Template>
</UserControl>
