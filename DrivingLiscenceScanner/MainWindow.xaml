<windows:CustomWindow x:Class="DrivingLicenceScanner.MainWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:windows="clr-namespace:Amuqsit.CustomControls.Windows;assembly=Amuqsit.CustomControls"
                      Title="Driving Licence Scanner"
                      Height="600"
                      Width="900"
                      Name="Window">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock IsHitTestVisible="False" Text="{Binding Path=Title, ElementName=Window}"></TextBlock>
        <ContentControl Grid.Row="1"
                        Content="{Binding Source={StaticResource ViewModelLocator}, Path=MainViewModel.CurrentViewModel}"></ContentControl>
    </Grid>
</windows:CustomWindow>